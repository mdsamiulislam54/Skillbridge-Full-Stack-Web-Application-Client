{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
   
    "routes": [
        {
            "src": "/api/auth/(.*)",
            "dest": "https://skillbridge-api.onrender.com/api/auth/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "https://skillbridge-api.onrender.com/api/$1"
        },
        {
            "handle": "filesystem"
        }
    ],
    "env": {
        "NEXT_PUBLIC_BACKEND_URL": "https://skillbridge-full-stack-web-application.onrender.com"
    }
}