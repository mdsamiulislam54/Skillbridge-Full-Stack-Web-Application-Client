{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "https://skillbridge-app-api-inky.vercel.app/api/auth/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://skillbridge-app-api-inky.vercel.app/api/$1"
    },
    {
      "handle": "filesystem"
    }
  ],

  "env": {
    "NEXT_PUBLIC_BACKEND_URL": "https://skillbridge-app-api-inky.vercel.app",
    "NEXT_PUBLIC_FRONTEND_URL": "https://skillbridge-chi-seven.vercel.app"
  },
  "github": {
    "silent": true
  }
}